<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code.-->
    <ListPreference
        android:defaultValue="@string/pref_default_mean_mode"
        android:entries="@array/mean_mode_entries"
        android:entryValues="@array/mean_mode_values"
        android:key="meanMode"
        android:title="@string/pref_title_mean_mode" />

    <EditTextPreference
        android:inputType="text"
        android:key="brokerIp"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_intent_broker" />

</PreferenceScreen>
